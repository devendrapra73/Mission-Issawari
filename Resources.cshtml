<script>
    function showContent(category, id) {
        // Remove active class from all items in this category
        document.querySelectorAll('.' + category + ' .list-group-item').forEach(item => {
            item.classList.remove('active');
        });

        // Add active class to clicked item
        event.currentTarget.classList.add('active');

        // Hide all content in this category
        document.querySelectorAll('.' + category + ' .content-card').forEach(div => {
            div.classList.remove('show');
        });

        // Show selected content
        document.getElementById(id).classList.add('show');
    }
</script>
