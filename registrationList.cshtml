@{
    ViewBag.Title = "registrationList";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

@model List<missFinal.Models.Tbl_Registration>

<!-- DataTables CSS -->
<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<!-- jQuery & DataTables JS -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>

<div class="col-lg-8 grid-margin stretch-card" style="margin-top:70px; width:100%">
    @*<div class="card">
        <div class="card-body">*@
            <h4 class="card-title" style="margin-top:70px">Registration List</h4>

            <div class="table-responsive">
                <table class="table table-striped" id="example">
                    <thead class="thead-dark">
                        <tr>
                            <th>SrNo</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Password</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int j = 0;
                            foreach (var i in Model)
                            {
                                <tr>
                                    <td>@(++j)</td>
                                    <td>@i.Name</td>
                                    <td>@i.Email</td>
                                    <td>@i.Mobile</td>
                                    <td>@i.Password</td>
                                    <td>
                                        @if (i.IsActive == true)
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <a class="btn @(i.IsActive == true ? "btn-warning" : "btn-success") btn-sm"
                                           href="/SuperAdmin/ToggleRegistration?Reg_Id=@i.Reg_Id">
                                            @(i.IsActive == true ? "Disable" : "Enable")
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        @*</div>
    </div>*@
</div>

<!-- DataTable Init -->
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
