
@{
    ViewBag.Title = "Course";
    Layout = "~/Views/Shared/programLayout.cshtml";
}


<header id="headCourse">
        <div class="container">
            <h1 id="main-title">महिला सशक्तिकरण</h1>
            <p id="main-subtitle">आत्मनिर्भर बनने की दिशा में पहला कदम</p>
        </div>
    </header>



<!-- News Section -->
<section id="skills" class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Latest News</h2>
            <p class="lead text-muted">Latest news related to women's crime and empowerment for their awareness.</p>
        </div>

        <div class="row g-4">
            @foreach (var program in Model.Programs)
            {
                <div class="col-12 col-sm-6 col-md-3">
                    <div class="card feature-card h-100">
                        <img src="~/Content/Programimg/@program.Pro_Pic"
                             class="card-img-top"
                             alt="@program.Pro_Title"
                             onerror="this.src='/Content/default.png'" />
                        <div class="card-body">
                            <h5>@program.Pro_Title</h5>
                            <p>@program.Pro_Des</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-success">Free</span>
                                <a href="/Home/Course/@program.P_id" class="btn btn-sm btn-outline-primary">Enroll</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

