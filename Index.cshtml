<!-- Story Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="text-center">
            <h2 class="section-title">Success Stories</h2>
            <br />
            
        <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.1s">
            @if (Model != null)
            {
                foreach (var x in Model.Stories)
                {
                    <div class="testimonial-item p-4 my-5">
                        <i class="fa fa-quote-right fa-3x text-light position-absolute top-0 end-0 mt-n3 me-4"></i>
                        <div class="d-flex align-items-end mb-4">
                            <div class="ms-4" style="background-color: floralwhite; border-bottom: 3px solid pink; ">
                                <h5 class="mb-1">@x.Name</h5>
                                <p class="m-0">@x.Story</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="testimonial-item p-4 my-5">
                    <p>No Story available at the moment.</p>
                </div>
            }
        </div>

        <!-- Add Owl Carousel Script -->

        <script>
            $(document).ready(function () {
                $(".testimonial-carousel").owlCarousel({
                    items: 1,
                    loop: true,
                    autoplay: true,
                    autoplayTimeout: 5000,
                    autoplayHoverPause: true,
                    nav: true,
                    dots: true,
                    responsive: {
                        0: { items: 1 },
                        768: { items: 2 },
                        1024: { items: 3 }
                    }
                });
            });
        </script>

    </div>
</div>
<!-- Story End -->


