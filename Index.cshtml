<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $.ajax({
        url: "/Home/GetStatistics",
        type: "GET",
        dataType: "json",
        success: function (data) {
            let totalComplaints = data.TotalComplaintsFiled || 0;
            let resolved = data.CasesResolved || 0;
            let ongoing = data.OngoingCases || 0;

            let pendingCases = totalComplaints - resolved - ongoing;
            if (pendingCases < 0) pendingCases = 0;

            $("#complaints-value").text(totalComplaints);
            $("#cases-value").text(resolved);
            $("#pending-value").text(pendingCases);
        },
        error: function (xhr) {
            console.error("Error fetching data:", xhr.responseText);
            alert("Error fetching statistics data!");
        }
    });
</script>

